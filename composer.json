{
  "name": "h3nnry/refactoring-commission-calculator",
  "description": "Commission calculator for refactoring.",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "require": {
    "php": "^8.2",
    "vlucas/phpdotenv": "^5.6",
    "symfony/monolog-bundle": "^3.10",
    "symfony/cache": "^7.2",
    "guzzlehttp/guzzle": "^7.9",
    "psr/simple-cache": "^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75",
    "phpunit/phpunit": "^11.5"
  },
  "scripts": {
    "cs-check": "vendor/bin/php-cs-fixer fix --dry-run --show-progress=none -v",
    "cs-fix": "vendor/bin/php-cs-fixer fix --show-progress=none",
    "test": "vendor/bin/phpunit"
  }
}
